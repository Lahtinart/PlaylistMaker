<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/track_item_min_height"
    android:paddingEnd="@dimen/track_item_padding_end"
    android:paddingTop="@dimen/track_item_padding_top"
    android:paddingBottom="@dimen/track_item_padding_bottom">

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="@dimen/arrow_icon_size"
        android:layout_height="@dimen/arrow_icon_size"
        android:src="@drawable/arrow_forward_light_mode"
        android:layout_marginEnd="@dimen/arrow_icon_padding_end"
        android:layout_marginBottom="@dimen/arrow_icon_padding_bottom"
        android:layout_marginTop="@dimen/arrow_icon_padding_top"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/track_image_size"
        android:layout_height="@dimen/track_image_size"
        android:scaleType="centerCrop"
        android:contentDescription="@string/track_cover"
        android:background="@drawable/image_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/track_name_text_size"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="400"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/track_name_margin_start"
        android:layout_marginTop="@dimen/track_name_margin_top"
        android:layout_marginEnd="@dimen/track_name_margin_end"
        app:layout_constraintStart_toEndOf="@id/track_image"
        app:layout_constraintTop_toTopOf="@id/track_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/info_container_margin_top"
        android:layout_marginEnd="@dimen/info_container_margin_end"
        app:layout_constraintStart_toStartOf="@id/track_name"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yp_text_gray"
            android:textSize="@dimen/info_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/dot_icon"
            android:layout_width="@dimen/dot_icon_size"
            android:layout_height="@dimen/dot_icon_size"
            android:layout_marginStart="@dimen/dot_icon_margin_horizontal"
            android:layout_marginEnd="@dimen/dot_icon_margin_horizontal"
            android:src="@drawable/dot_icon"
            android:contentDescription="@null" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yp_text_gray"
            android:textSize="@dimen/info_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>